<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="420" height="180" backgroundAlpha="1.0" 
	backgroundColor="#FFFFFF" creationPolicy="all" creationComplete="initApp()" 
	verticalScrollPolicy="off" horizontalScrollPolicy="off" xmlns:Data="Data.*">
	<mx:states>
		<mx:State name="fecha">
			<mx:SetProperty name="height" value="220"/>
			<mx:SetProperty target="{canvas1}" name="height" value="70.5"/>
			<mx:AddChild position="lastChild">
				<mx:Canvas x="17.95" y="131" width="247.5" height="37" styleName="canvasMod" id="canvas0">
					<mx:DateField id="dtfFecha" x="103.25" y="6" width="111"/>
					<mx:Label x="31.25" y="7" text="Fecha límite:" id="label1"/>
				</mx:Canvas>
			</mx:AddChild>
			<mx:SetProperty target="{btnGenerar}" name="x" value="65"/>
			<mx:SetProperty target="{btnGenerar}" name="y" value="181"/>
			<mx:SetProperty target="{btnLimpiar}" name="x" value="144"/>
			<mx:SetProperty target="{btnLimpiar}" name="y" value="181"/>
		</mx:State>
	</mx:states>
	
	<mx:Metadata>
		[Event(name="enviar", type="enviar")]
	</mx:Metadata>
	
	<mx:Script>
		<![CDATA[
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import mx.core.Application;
			import mx.containers.TitleWindow;		
			import mx.managers.PopUpManager;
			import mx.controls.Alert;
			import mx.effects.easing.Elastic;
			import mx.rpc.soap.WebService;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.utils.ObjectUtil;
			
			[Bindable]
			public var dpAcred:XMLList = new XMLList();
			
			private var _xmlAcred:XML = new XML();
			private var _xmlCred:XML = new XML();
			
			public var credObj:ArrayCollection = new ArrayCollection();
			
			public var rep:String;
			public var titulo:String;
			private var du:Utils;
			private var global:Globales;
			
			private function buscar():void{
				if(txtAcred.text != ""){
					var wsCatPLD:WebService = new WebService;
					var params:Array = new Array;
					
					du.initWsCatPLD(wsCatPLD);
					du.sCursor();
					
					du.ejecutaWsMethod(wsCatPLD,function(evt:ResultEvent):void {											
						_xmlCred = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsCatPLD);
						
						if(_xmlCred.elements().length() > 0){
							formatearCred();
							cboCiclo.dataProvider = credObj;
						}	
					});
					params[0] = txtAcred.text;
					wsCatPLD.getListadoPLD.send(3, params);	
				}
				else
					du.mostrarMensaje("Debe capturar el código de Acreditado.", titulo, 4, null, null, global.iAlert);
			}
			
			public function ejecuta():void{
				btnGenerar.setFocus();
				//rep = 0 indica que el control es utilizado para extraer 
				//los valores de sus controles
				if(rep == "0")
					enviar();
				//rep <> 0 indica que el control es utilizado para generar 
				//el reporte indicado en esta variable
				else if(rep != "0")
					generar();
			}
			
			public function enviar():void{
				dispatchEvent(new Event("enviar"));
			}
			
			private function formatearCred():void{
			var oItem:Object;
			var cont:int = _xmlCred.elements().length();
			var item:Array = new Array;
			
			credObj.removeAll();
			credObj.refresh();
			
			oItem = new Object();
			oItem.codigo = "0";
			oItem.descripcion = "--Seleccionar--";
			item.push(oItem);	
			
			for(var i:int = 0; i < cont; i++){
				oItem = new Object();
				oItem.codigo = _xmlCred.Table[i].CODIGO;
				oItem.descripcion = _xmlCred.Table[i].CODIGO;
				item.push(oItem);	
			}
			credObj = new ArrayCollection(item);
		}
			
			//funcion que invoca la generacion de reportes en formato PDF
			public function generar():void{
				var wsCat:WebService = new WebService;
				var params:Array = new Array;
				
				if(valida()){
					du.initWsCat(wsCat);
					du.sCursor();
					
					du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
						_xmlAcred = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsCat);
						
						if(_xmlAcred.elements().length() > 0){
							dpAcred = _xmlAcred.Table.(ID.toString().substr(0, txtAcred.length).toLowerCase() == txtAcred.text.toLowerCase());
							if(dpAcred.elements().length() > 0){
								var id:String = "&id=" + rep;
								var acred:String = "&acred=" + txtAcred.text;
								var ciclo:String = "&ciclo=" + cboCiclo.text;
								var usuario:String = "&usuario=" + global.obtenerUsuario();
								var nomUsuario:String = "&nomUsuario=" + Application.application.NOM_U_ID;
								var consulta:String = global.urlPdf + id + acred + ciclo + usuario + nomUsuario;
								Application.application.muestraPdf(consulta);
							}
							else
								du.mostrarMensaje("No es posible generar el documento del acreditado.\n\nVerifique los datos capturados.",titulo,4,null,null,global.iAlert);
						}	
					});
					params[0] = global.obtenerUsuario();
					wsCat.getListado.send(14, params);
				}
			}			
						
			public function init(rep:String, titulo:String, estatus:String=null):void{
				this.rep = rep;
				this.titulo = titulo;
				currentState = estatus;
				lblTitulo.text = titulo.toUpperCase();
				limpiar();
			}			
						
			public function initApp():void{
				global = new Globales();
				du = new Utils();
			}		
	
			public function limpiar():void{
				var fec:Date;
				txtAcred.text = "";
				cboCiclo.dataProvider = null;
				txtAcred.setFocus();
				fec = global.obtenerFechaSistema();
				if(currentState == "fecha")
					dtfFecha.selectedDate = global.seleccionarDiaHabil(new Date(fec.fullYear,fec.month,fec.date)); 
				dispatchEvent(new Event("limpiar"));
			}
				
			public function valida():Boolean{
				if(txtAcred.text == ""){
					du.mostrarMensaje("Capture el código de acreditado.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(cboCiclo.selectedIndex == 0){
					du.mostrarMensaje("Debe seleccionar el identificador del crédito.",titulo,4,null,null,global.iAlert);
					return false;
				}
				return true;
			}
			
			public function obtenerAcred():String{
				return txtAcred.text;
			}
			
			public function obtenerCiclo():String{
				return cboCiclo.text;
			}
		]]>
	</mx:Script>
	<mx:Label id="lblTitulo" x="16.5" y="10" width="276.45" fontSize="12" fontWeight="bold" fontStyle="italic"/>
	<mx:Canvas x="17.95" y="53.5" width="385" height="75.5" styleName="canvasMod" id="canvas1">
		<mx:Label id="lblAcred" x="10" y="11" text="Acreditado:"/>
		<mx:TextInput id="txtAcred" x="79" y="10" maxChars="20" enter="buscar()" width="150"/>
		<mx:Label id="lblCiclo" x="29" y="40" text="Crédito:"/>
		<mx:ComboBox id="cboCiclo" x="79" y="39" labelField="descripcion" width="294"/>
		<mx:Button id="btnBuscar" x="237" y="8" icon="@Embed(source='assets/ico_lupa.png')" click="buscar()" width="40"/>
	</mx:Canvas>
	<mx:Label x="16.5" y="34" text="Criterios de Selección" width="124.25"/>
	<mx:Button id="btnGenerar" x="135" y="146" label="Generar" click="ejecuta()"/>
	<mx:Button id="btnLimpiar" x="214" y="146" label="Limpiar" width="71" height="24" click="limpiar()"/>
</mx:Canvas>