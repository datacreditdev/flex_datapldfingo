			import mx.rpc.events.FaultEvent;
			import mx.utils.ObjectUtil;
			
			private var _xmlReg:XML =  new XML();
			private var _xmlCoord:XMLList = new XMLList;
			private var _xmlAsesor:XML =  new XML();
			[Bindable]
			private var _xmlRep:XML =  new XML();
			
			public var regObj:ArrayCollection = new ArrayCollection();
			public var coordObj:ArrayCollection = new ArrayCollection();
			public var asesorObj:ArrayCollection = new ArrayCollection();
			
			public var wsRep:WebService;
			public var rep:String;
			private var du:Utils;
			private var global:Globales;
			
			public function agregaInicial(codigo:String, texto:String):Object{
				var oItem:Object = new Object();
				oItem.codigo = codigo;	
				oItem.nombre = texto;
				return oItem;
			}		
			
			public function cargaAsesor():void{
				var wsCat:WebService = new WebService;
				var params:Array = new Array;
				
				du.initWsCat(wsCat);
				du.sCursor();
						
				du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
					_xmlAsesor = new XML(evt.result.toString());
						
					du.rCursor();
					du.closeWs(wsCat);	
						
					asesorObj.removeAll();
					asesorObj.refresh();
					asesorObj.addItem(agregaInicial("000000", "--Todos--"))	
						
					if(_xmlAsesor.elements().length() > 0)
						formateaAsesor();
					if(_xmlAsesor.elements().length() == 1){
						cboAsesor.selectedIndex = 1;
						cboAsesor.enabled = false;
					}
				});
				params[0] = cboSucursal.selectedItem.codigo;
				wsCat.getCatalogoGral.send(8, params);
			}		
			
			public function cargaSucursal():void{
				_xmlCoord = Application.application._xmlCoord.Table.(CDGRG.toString().toLowerCase() == cboRegion.selectedItem.codigo.toString().toLowerCase());
					
				coordObj.removeAll();
				coordObj.refresh();	
				coordObj.addItem(agregaInicial("000", "--Todas--"))
				asesorObj.removeAll();
				asesorObj.refresh();
				asesorObj.addItem(agregaInicial("000000", "--Todos--"))
				
				cboSucursal.enabled = true;	
					formateaSucursal();
				
				if(_xmlCoord.length() == 1){
					cboSucursal.selectedIndex = 1;
					cboSucursal.enabled = false;
					rdbSucursal.enabled = false;
					cargaAsesor();
				}
			}			
						
			public function cargaRegion():void{ 				  
				_xmlReg = Application.application._xmlReg;
					
					formateaRegion();
				if(_xmlReg.elements().length() == 1){
					cboRegion.selectedIndex = 1;
					cboRegion.enabled = false;
					rdbRegion.enabled = false;
				}
				cargaSucursal();
			}				
			
			public function enviar():void{
				dispatchEvent(new Event("enviar"));
			}
			
			public function exportar():void{
				var titulo:String;
				var textoCart:String;
				if (valida() == true){			
					initConexion();
					du.sCursor();
					
					Application.application.bloquear();
						
					switch (tipoCart.selectedValue.toString()){
            			case "0":
                			textoCart = "CARTERA VIGENTE, JUDICIAL Y EXTRAJUDICIAL";
                			break;
            			case "1":
			                textoCart = "CARTERA VIGENTE";
			                break;
			            case "2":
			                textoCart = "CARTERA VENCIDA";
			                break;
			        }	
							
					du.ejecutaWsMethod(wsRep,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsRep);
						
						if(_xmlRep.elements().length() > 0){
							var dgE:ExcelExportXls = new ExcelExportXls();
							if(rep == "1")
								dgE.loadDGInExcel(dgRepCart,null,"Reporte de Situación de Cartera al " + dtfFecha.text + " " + textoCart);
							else if(rep == "4")		
								dgE.loadDGInExcel(dgRepBandas,null,"Antigüedad de Saldos al " + dtfFecha.text + " " + textoCart);
						}
						else
							Alert.show("No se encontro información relacionada con los datos de consulta.","Reporte",4,null,null,global.iAlert);
							
						Application.application.desbloquear();				
					});
					if(this.rep == "1"){
						wsRep.getRepMora.send(dtfFecha.text, nivel.selectedValue.toString(), tipoCart.selectedValue.toString(),
											 Application.application.U_ID, Application.application.NOM_U_ID,
											 cboRegion.selectedItem.codigo, cboSucursal.selectedItem.codigo, cboAsesor.selectedItem.codigo);
					}
					else if(this.rep == "4"){
						wsRep.getRepAntSaldos.send(dtfFecha.text, nivel.selectedValue.toString(), tipoCart.selectedValue.toString(),
											      Application.application.U_ID, Application.application.NOM_U_ID,
											 	  cboRegion.selectedItem.codigo, cboSucursal.selectedItem.codigo, cboAsesor.selectedItem.codigo);
					}
				}
			}		
			
			private function formateaAsesor():void{
				var cont:int = _xmlAsesor.elements().length();
				var oItem:Object;
				var item:Array = new Array;
				
				for(var i:int = 0; i < cont; i++){
					oItem = new Object();
					oItem.codigo = _xmlAsesor.Table[i].CODIGO;
					oItem.nombre = _xmlAsesor.Table[i].NOMBREC;
					item.push(oItem);
				}
				asesorObj.source = asesorObj.source.concat(item);
			}			
						
			private function formateaSucursal():void{
				var cont:int = _xmlCoord.length();
				var oItem:Object;
				var item:Array = new Array;
				
				for(var i:int = 0; i < cont; i++){
					oItem = new Object();
					oItem.codigo = _xmlCoord.CODIGO[i].toString();
					oItem.nombre = _xmlCoord.NOMBRE[i].toString();
					item.push(oItem);
				}
				coordObj.source = coordObj.source.concat(item);
			}			
			
			public function formateaRegion():void{
				var cont:int = _xmlReg.elements().length();
				var oItem:Object;
				var item:Array = new Array;
				
				for(var i:int = 0; i < cont; i++){
					oItem = new Object();
					oItem.codigo = _xmlReg.Table[i].CODIGO;
					oItem.nombre = _xmlReg.Table[i].NOMBRE;
					item.push(oItem);
				}
				regObj.source = regObj.source.concat(item);
			}	
			
			public function generar():void{
				if (valida()){	
					if (rep == "-1")
						enviar();
					else if(rep != "-1"){				
						var consulta:String;
						var id:String = "&id=" + rep;
						var fecha:String = "&fecha=" + global.formatoFechaSep(dtfFecha.selectedDate,"-");
						var niv:String = "&nivel=" + nivel.selectedValue.toString();
						var cartera:String = "&tipoCart=" + tipoCart.selectedValue.toString();
						var usuario:String = "&usuario=" + Application.application.U_ID;
						var nomUsuario:String = "&nomUsuario=" + Application.application.NOM_U_ID;
						var region:String = "&region=" + obtieneRegion();
						var sucursal:String = "&sucursal=" + obtieneSucursal();
						var asesor:String = "&asesor=" + obtieneAsesor();
						consulta = global.urlPdf + id + fecha + niv + cartera + usuario + nomUsuario + region + sucursal + asesor;					
						Application.application.muestraPdf(consulta);
					}
				}			
			}
						
			public function init(rep:String, titulo:String, estado:String):void{
				this.rep = rep;
				lblTitulo.text = titulo;
				currentState = estado;
				limpiar();
			}		
						
			public function initApp():void{
				global = new Globales();
				du = new Utils();
			}		
			
			public function initConexion():void{				
				wsRep = new WebService();			
				wsRep.wsdl = Application.application.wsStr.wsdlRep.toString();
				wsRep.loadWSDL();
			}	
		
			public function limpiar():void{
				var fec:Date;
				cboRegion.enabled = true;
				cboSucursal.enabled = true;
				cboAsesor.enabled = true;
				regObj.removeAll();
				regObj.refresh();
				regObj.addItem(agregaInicial("000", "--Todas--"));
				cboRegion.dataProvider = regObj;		
				cboSucursal.dataProvider = coordObj;
				cboAsesor.dataProvider = asesorObj;
				cargaRegion();		
				fec = Application.application._Current_Fecha;
				dtfFecha.selectedDate = global.seleccionaDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				if(currentState == 'fechaNoExp')
					dtfFechaFin.selectedDate = global.seleccionaDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				nivel.selectedValue = 2;
				tipoCart.selectedValue = 0;
			}
			
			public function obtieneAsesor():String{
				return cboAsesor.selectedItem.codigo;
			}
			
			public function obtieneRegion():String{
				return cboRegion.selectedItem.codigo;
			}
			
			public function obtieneSucursal():String{
				return cboSucursal.selectedItem.codigo;
			}
				
			public function valida():Boolean{
				var invTipoCart:Array = Validator.validateAll([tipoCartV]);
				
				if(dtfFecha.text == "" && currentState == null){
					Alert.show("Seleccione la fecha límite del reporte.","Reporte",4,null,null,global.iAlert);
					return false;
				}
				if(currentState == 'fechaNoExp'){
					if(dtfFechaFin.text == ""){ 
						Alert.show("Seleccione la fecha final del reporte.","Reporte",4,null,null,global.iAlert);
						return false;
					}
				}
				if(nivel.selection == null){
					Alert.show("Seleccione el nivel de detalle del reporte.","Reporte",4,null,null,global.iAlert);
					return false;
				}
				if(invTipoCart.length > 0){
					Alert.show("Seleccione el Tipo de Cartera del reporte.","Reporte",4,null,null,global.iAlert);
					return false;
				}
				return true;
			}
		]]>
	</mx:Script>
