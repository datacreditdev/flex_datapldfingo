			import mx.rpc.soap.WebService;
			import mx.utils.ArrayUtil;
			import mx.validators.Validator;
			
			[Bindable]
			private var _xmlRep:XML =  new XML();
			private var repObj:ArrayCollection;
			
			public var wsRep:WebService;
			public var du:Utils;
			public var titulo:String;
			public var fecha:String;
			public var fechaFin:String;
			private var global:Globales;	
			
			public function exportar():void{
				var dgE:ExcelExportXls = new ExcelExportXls();
				dgE.loadDGInExcel(dgReporte,null,titulo);		
			}		
			
			public function initApp():void{
				global = new Globales();
				du = new Utils();
				titulo = "Reporte de PrÃ©stamos";
				comFiltroRepPrestamos.init("-1", titulo, "");
				comFiltroRepPrestamos.addEventListener("enviar",generar);	
			}
					
			public function generar(event:Event):void{
				var obj:FiltroRepPrestamos = event.target as FiltroRepPrestamos;
				if(obj.valida() == true){				
			
					initConexion();
					du.sCursor();
							
					du.ejecutaWsMethod(wsRep,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsRep);
							
						if(_xmlRep.elements().length() > 0){
							exportar();	
						}
						else
							Alert.show("No se encontraron registros que coincidan con los criterios de consulta.\n\nVerifique los datos seleccionados.",titulo,4,null,null,global.iAlert);
					});
					wsRep.getRepPrestamos.send(Number(obj.prestamos.selectedValue), Number(obj.ciclos.selectedValue),
											  obj.dtfIniDesde.text, obj.dtfIniHasta.text, obj.dtfFinDesde.text, 
											  obj.dtfFinHasta.text, obj.dtfPagos.text, Number(obj.chkSitCart.selected), 
											  Number(obj.chkSitTes.selected), Number(obj.chkSitSaldo.selected), 
											  Number(obj.chkSitLiq.selected), Number(obj.chkSitDev.selected),   
										      obj.tipoCart.selectedValue.toString(), global.obtenerUsuario(),
										      Application.application.NOM_U_ID, obj.cboRegion.selectedItem.codigo, 
										      obj.cboSucursal.selectedItem.codigo, obj.cboAsesor.selectedItem.codigo);	
				}
			}
			
			public function initConexion():void{				
				wsRep = new WebService();			
				wsRep.wsdl = Application.application.wsStr.wsdlRep.toString();
				wsRep.loadWSDL();
			}	
		]]>
	</mx:Script>
