<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="514" height="462" creationPolicy="all" xmlns:Data="Data.*">
	<mx:Metadata>
		[Event(name="enviarDatosAcred", type="Data.EventAcred")]
	</mx:Metadata>
	
	<mx:Script>
		<![CDATA[
			import Data.EventAcred;
			import Data.DatosAcred;
			import Data.Utils;
			import Data.Globales;
			import mx.controls.Alert;
			import mx.validators.Validator;
			import mx.collections.ArrayCollection;
			import mx.core.Application;
			import mx.containers.TitleWindow;			
			import mx.managers.PopUpManager;
			import mx.effects.easing.Elastic;
			import mx.rpc.soap.WebService;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.validators.Validator;
			import mx.events.ValidationResultEvent;	
			
			private var _xmlReg:XML = new XML();
			private var _xmlNiv:XML = new XML();
			
			private var regObj:ArrayCollection = new ArrayCollection;
			
			public var wsMS:WebService;   //variable utilizada para las llamadas asincronas de WS
			private var du:Utils;
			private var global:Globales;
			private var acred:String;
			private var vResult:ValidationResultEvent;
			
			private function formateaRegistro():void{
				var i:int;
				var cont:int = _xmlReg.elements().length();
				var oItem:Object;
				var item:Array = new Array;
				
				oItem = new Object();
				oItem.fecha = "--Seleccionar--";
				item.push(oItem);	
				
				for(i = 0; i < cont; i++){
					oItem = new Object();
					oItem.fecha = _xmlReg.Table[i].FECREG;
					item.push(oItem);
				}
				regObj = new ArrayCollection(item);
			}
			
			public function init(info:DatosAcred):void{
				var wsCat:WebService = new WebService;
				var params:Array = new Array;
				du = new Utils();
				global = new Globales();
				
				acred = info.codigo;
				
				du.initWsCat(wsCat);
				du.sCursor();
				
				du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {
					_xmlReg = new XML(evt.result);
					
					du.closeWs(wsCat);
					du.rCursor();
					
					if(_xmlReg.elements().length() > 0){
						formateaRegistro();
						cboRegistro.dataProvider = regObj;
					}
				});
				//Obtiene el Listado de los distintos Analisis de Nivel de Riesgo del Acreditado
				params[0] = acred;
				wsCat.getListado.send(51, params);	
			}
			
			public function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlServ.toString();
				wsMS.loadWSDL();
			}
			
			private function selecNivelRiesgo():void{
				var wsCat:WebService = new WebService;
				var params:Array = new Array;
				var fecNivel:String;
				
				fecNivel = cboRegistro.selectedItem.fecha;
				
				du.initWsCat(wsCat);
				du.sCursor();
				global.bloquear();
				
				du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {
					_xmlNiv = new XML(evt.result);
					
					du.closeWs(wsCat);
					du.rCursor();
					global.desbloquear();
					
					if(_xmlNiv.elements().length() > 0){
						lblUbicacion.text = _xmlNiv.Table[0].UBICACION;
						lblTipoPers.text = _xmlNiv.Table[0].TIPOPERS;
						lblAntAct.text = _xmlNiv.Table[0].ANTACT; 
						lblActEco.text = _xmlNiv.Table[0].ACTECO;
						lblUbicNeg.text = _xmlNiv.Table[0].UBICNEG;
						lblHist.text = _xmlNiv.Table[0].HISTORIAL;
						lblMonto.text = _xmlNiv.Table[0].MONTO;
						lblOrigen.text = _xmlNiv.Table[0].ORIGEN;
						lblDestino.text = _xmlNiv.Table[0].DESTINO;
						lblNivel.text = _xmlNiv.Table[0].NIVEL; 	
					}
					else{
						lblUbicacion.text = "";
						lblTipoPers.text = "";
						lblAntAct.text = "";
						lblActEco.text = "";
						lblUbicNeg.text = "";
						lblHist.text = "";
						lblMonto.text = "";
						lblOrigen.text = "";
						lblDestino.text = "";
						lblNivel.text = "";
					}
				});
				//Obtiene informacion del Nivel de Riesgo que se calculo para el Acreditado
				params[0] = acred;
				params[1] = fecNivel;
				wsCat.getInfoRegistro.send(30, params);
			}
	]]>
	</mx:Script>
	<mx:Label text="Fecha Evaluación:" x="99" y="13"/>
	<mx:ComboBox id="cboRegistro" labelField="fecha" x="200" y="10" width="140" change="selecNivelRiesgo()"/>
	<mx:Canvas styleName="canvasMod" x="9" y="42" height="418" width="496"> 
		<mx:Canvas y="24" styleName="canvasMod" width="482" height="124" x="6">
