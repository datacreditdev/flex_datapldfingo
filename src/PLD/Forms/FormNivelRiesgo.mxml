				</mx:FormItem>
			</mx:Form>
		</mx:Canvas>
		<mx:Canvas y="175" styleName="canvasMod" width="482" height="76" x="6">
			<mx:Form x="1" y="1" width="478" height="73" verticalScrollPolicy="off">
				<mx:FormItem label="Actividad Económica:" id="actEco" visible="true">
					<mx:Label id="lblActEco"/>
				</mx:FormItem>
				<mx:FormItem label="Ubicación Negocio:" id="ubicNeg" visible="true">
					<mx:Label id="lblUbicNeg"/>
				</mx:FormItem>
			</mx:Form>
		</mx:Canvas>
		<mx:Canvas y="278" styleName="canvasMod" width="482" height="102" x="6">
			<mx:Form x="1" y="0" width="478" height="100" verticalScrollPolicy="off">
				<mx:FormItem label="Monto:" id="monto" visible="true">
					<mx:Label id="lblMonto"/>
				</mx:FormItem>
				<mx:FormItem label="Origen Recursos:" id="oriRec" visible="true">
					<mx:Label id="lblOrigen"/>
				</mx:FormItem>
				<mx:FormItem label="Destino Recursos:" id="desRec" visible="true">
					<mx:Label id="lblDestino"/>
				</mx:FormItem>
			</mx:Form>
		</mx:Canvas>
		<mx:Label text="Nivel Riesgo:" visible="true" fontStyle="italic" fontWeight="bold" fontSize="13" x="155" y="387"/>
