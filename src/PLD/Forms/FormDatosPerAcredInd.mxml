			public function buscarPais(paisId:String):void{
				var wsCat:WebService = new WebService;
				
				du.initWsCat(wsCat);
				du.sCursor();				
				
				du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
					_xmlPais = new XML(evt.result.toString());
					var cont:int = _xmlPais.elements().length();
					
					du.rCursor();
					du.closeWs(wsCat);
					
					for(var i:int = 0; i < cont; i++){
						ExternalInterface.call("console.log", "_xmlCoord.Table[i].CODIGO =" + _xmlPais.Table[i].CODIGO );
						if(paisId == _xmlPais.Table[i].CODIGO) {
							var pais:String = _xmlPais.Table[i].NOMBRE;
							var gentilicio:String = _xmlPais.Table[i].GENTILICIO;								 
							txtPais.text = pais.toUpperCase();	
							txtNacion.text = gentilicio.toUpperCase()  ;		
						}			
					}
				});
				//CONSULTA LOS PAISES DISPONIBLES
				wsCat.getCatalogoGral.send(1);
			}
		
			public function buscarEntidadNacim(paisId:String):void{
				var wsCat:WebService = new WebService;
				
				du.initWsCat(wsCat);
				du.sCursor();
				
				du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
					_xmlPais = new XML(evt.result.toString());
					var cont:int = _xmlPais.elements().length();
					
					du.rCursor();
					du.closeWs(wsCat);
					
					for(var i:int = 0; i < cont; i++){						 
						ExternalInterface.call("console.log", "_xmlCoord.Table[i].CODIGO =" + _xmlPais.Table[i].CODIGO );
						if(paisId == _xmlPais.Table[i].CODIGO) {				 
							txtEntFed.text = _xmlPais.Table[i].NOMBRE;		
						}			
					}
				});
				//CONSULTA LOS PAISES DISPONIBLES
				wsCat.getCatalogoGral.send(2);
			}
			
			public function init(info:DatosAcred):void{
				var wsCatPLD:WebService = new WebService;
				var params:Array = new Array;
				
				du = new Utils();
				global = new Globales();
														
				if (info != null){
					txtCodigo.text = info.codigo;
					txtRfc.text = info.rfc;
					txtFecha.text = info.fecha;
					
					if(info.tipoPers == "F"){
						currentState = "";
