			<mx:DataGridColumn headerText="MONTO" dataField="MONTO" width="90"/>
			<mx:DataGridColumn headerText="PAGADO CAPITAL" dataField="CAPITAL" width="120"/>
			<mx:DataGridColumn headerText="PAGADO INTERES" dataField="INTERES" width="120"/>
			<mx:DataGridColumn headerText="PAGADO RECARGOS" dataField="RECARGOS" width="120"/>
			<mx:DataGridColumn headerText="CUENTA" dataField="CDGCB" width="90"/>							
		</mx:columns>
	</mx:DataGrid>
