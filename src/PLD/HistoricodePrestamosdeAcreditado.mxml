<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="800" height="420" backgroundAlpha="1.0" 
	backgroundColor="#FFFFFF" creationPolicy="all" creationComplete="initApp()" 
	verticalScrollPolicy="off" horizontalScrollPolicy="off" xmlns:local="CONTROL.*" xmlns:Data="Data.*">
	
	<mx:Script>
		<![CDATA[
			import Data.ExcelExportXls;
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.core.Application;
			import mx.effects.easing.Elastic;	
			import mx.managers.PopUpManager;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.soap.WebService;
			import mx.utils.ObjectUtil;
			
			private var _xmlRep:XML =  new XML();
			
			public var titulo:String;
			private var du:Utils;
			private var global:Globales;
		
			private function exportar():void{
				var dgE:ExcelExportXls = new ExcelExportXls(); 
				dgE.loadDGInExcel(dgReporte,null,titulo);		
			}
		
			private function formatearMontoGrid(item:Object, column:DataGridColumn):String{
				var result:String;
                result = global.formatearMoneda(item[column.dataField]);
                return result;
			}
		
			private function generar(event:Event):void{	
				if(comFiltroAcreditado.valida()){
					var wsRepPLD:WebService = new WebService;
					var acred:String;
					
					acred = comFiltroAcreditado.obtenerCodigo();
					
					du.initWsRepPLD(wsRepPLD);
					du.sCursor();
							
					du.ejecutaWsMethod(wsRepPLD,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsRepPLD);
						
						dgReporte.dataProvider = null;
						btnExportar.enabled = false;
						lblTotal.text = "";
						
						var cont:Number = _xmlRep.elements().length()
														
						if(cont > 0){
							dgReporte.dataProvider = _xmlRep.Table;
							btnExportar.enabled = true;
							lblTotal.text = cont.toString() + " Registro(s)"; 
						}
						else{
							du.mostrarMensaje("No se encontraron registros que coincidan con los criterios de consulta.\n\nVerifique los datos seleccionados.",titulo,4,null,null,global.iAlert);
							lblTotal.text = "";
						}
					});
					wsRepPLD.getRepHistPrcAcred.send(acred);	
				}
			}			
						
			public function initApp():void{
				global = new Globales();
				du = new Utils();
				titulo = "Histórico de Préstamos de Acreditado";
				comFiltroAcreditado.init("0",titulo);
				comFiltroAcreditado.addEventListener("enviar", generar);
				comFiltroAcreditado.addEventListener("limpiar", limpiar);
			}		
			
			private function limpiar(event:Event):void{
				lblTotal.text = "";
				dgReporte.dataProvider = null;
				btnExportar.enabled = false;
			}
			
			private function mostrarEdoCuenta():void{
				var consulta:String;
				var id:String;
				var grupo:String;
				var acred:String;
				var ciclo:String;
				var usuario:String = global.obtenerUsuario();
				
				id = "&id=59";
				acred = "&acred=" + dgReporte.selectedItem.CDGCL;
				ciclo = "&ciclo=" + dgReporte.selectedItem.CICLO; 
				usuario = "&usuario=" + usuario; 
				consulta = global.urlPdf + id + grupo + acred + ciclo + usuario;
				navigateToURL(new URLRequest(consulta), "_blank");
			}
		]]>
	</mx:Script>
	<mx:DataGrid id="dgReporte" x="18.45" y="184" width="763.05" visible="true" height="197" horizontalScrollPolicy="on">
		<mx:columns>
			<mx:DataGridColumn headerText="ACREDITADO" dataField="CODIGO" width="90"/>
			<mx:DataGridColumn headerText="NOMBRE ACREDITADO" dataField="NOMBRE" width="320"/>
			<mx:DataGridColumn headerText="CREDITO" dataField="CRED" width="250"/>
			<mx:DataGridColumn headerText="FECHA" dataField="INICIO" width="80"/>
			<mx:DataGridColumn headerText="CANT ENTREGADA" dataField="CANT_ENTRE" width="125" labelFunction="formatearMontoGrid"/>
			<mx:DataGridColumn headerText="MONEDA" dataField="TIPO_MONEDA" width="80"/>
			<mx:DataGridColumn headerText="PERIODICIDAD" dataField="PERIODICIDAD" width="100"/>
			<mx:DataGridColumn headerText="PLAZO" dataField="PLAZO" width="70"/>
			<mx:DataGridColumn headerText="TASA" dataField="TASA" width="70"/>
			<mx:DataGridColumn headerText="FORMA DIPERSION" dataField="FORMA_DISP" width="200"/>
		</mx:columns>
	</mx:DataGrid>
	<mx:Button id="btnExportar" x="678.5" y="152" label="Exportar Excel" click="exportar()" enabled="false"/>
	<mx:Label id="lblTotal" x="18.45" y="389" width="680.05" fontWeight="bold" fontStyle="italic" fontSize="12"/>
	<local:FiltroAcreditado id="comFiltroAcreditado"/>
</mx:Canvas>