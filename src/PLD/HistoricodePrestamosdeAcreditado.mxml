<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="800" height="420" backgroundAlpha="1.0" 
	backgroundColor="#FFFFFF" creationPolicy="all" creationComplete="initApp()" 
	verticalScrollPolicy="off" horizontalScrollPolicy="off" xmlns:local="CONTROL.*" xmlns:Data="Data.*">
	
	<mx:Script>
		<![CDATA[
			import Data.ExcelExportXls;
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.core.Application;
			import mx.effects.easing.Elastic;	
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.soap.WebService;
			import mx.utils.ObjectUtil;
			
			private var _xmlRep:XML =  new XML();
			
			private var du:Utils;
			private var global:Globales;
			public var wsMS:WebService;
			public var titulo:String;
		
			private function exportar():void{
				var dgE:ExcelExportXls = new ExcelExportXls(); 
				dgE.loadDGInExcel(dgReporte,null,titulo);		
			}
		
			private function generar(event:Event):void{	
				if(comFiltroAcreditado.valida()){
					var acred:String = comFiltroAcreditado.obtenerCodigo();
					
					initConexion();
					du.sCursor();
							
					du.ejecutaWsMethod(wsMS,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsMS);
						
						dgReporte.dataProvider = null;
						btnExportar.enabled = false;
						lblTotal.text = "";
						
						var cont:Number = _xmlRep.elements().length()
														
						if(cont > 0){
							dgReporte.dataProvider = _xmlRep.Table;
							btnExportar.enabled = true;
							lblTotal.text = cont.toString() + " Registro(s)"; 
						}
						else{
							Alert.show("No se encontraron registros que coincidan con los criterios de consulta.\n\nVerifique los datos seleccionados.",titulo,4,null,null,global.iAlert);
							lblTotal.text = "";
						}
					});
					wsMS.getRepHistPrcAcred.send(acred);	
				}
			}			
						
			public function initApp():void{
				global = new Globales();
				du = new Utils();
				titulo = "Histórico de Préstamos de Acreditado";
				comFiltroAcreditado.init("0",titulo);
				comFiltroAcreditado.addEventListener("enviar",generar);
				comFiltroAcreditado.addEventListener("limpiar",limpiar);
			}		
			
			private function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlRep.toString();
				wsMS.loadWSDL();
			}	
		
			private function limpiar(event:Event):void{
				lblTotal.text = "";
				dgReporte.dataProvider = null;
				btnExportar.enabled = false;
			}
			
			private function mostrarEdoCuenta():void{
				var consulta:String;
				var id:String;
				var grupo:String;
				var acred:String;
				var ciclo:String;
				var usuario:String = global.obtenerUsuario();
				
				id = "&id=59";
				grupo = "&grupo=" + dgReporte.selectedItem.CDGNS;
				acred = "&acred=" + dgReporte.selectedItem.CDGCL;
				ciclo = "&ciclo=" + dgReporte.selectedItem.CICLO; 
				usuario = "&usuario=" + usuario; 
				consulta = global.urlPdf + id + grupo + acred + ciclo + usuario;
				navigateToURL(new URLRequest(consulta), "_blank");
			}
		]]>
	</mx:Script>
	<mx:DataGrid id="dgReporte" x="18.45" y="184" width="763.05" visible="true" height="197" horizontalScrollPolicy="on" itemDoubleClick="mostrarEdoCuenta()" 
		doubleClickEnabled="true">
		<mx:columns>
			<mx:DataGridColumn headerText="ACREDITADO" dataField="CDGCL" width="90"/>
			<mx:DataGridColumn headerText="NOMBRE ACREDITADO" dataField="NOMBRE_CL" width="200"/>
			<mx:DataGridColumn headerText="GRUPO" dataField="CDGNS" width="100"/>
			<mx:DataGridColumn headerText="NOMBRE GRUPO" dataField="GRUPO" width="150"/>
			<mx:DataGridColumn headerText="CICLO" dataField="CICLO" width="50"/>
			<mx:DataGridColumn headerText="INICIO" dataField="FINICIO" width="80"/>
			<mx:DataGridColumn headerText="CANT ENTREGADA" dataField="CANTENTRE" width="125"/>
			<mx:DataGridColumn headerText="SITUACION" dataField="SITUACION" width="150"/>
			<mx:DataGridColumn headerText="% INCREMENTO" dataField="PORC_INC" width="125"/>	
			<mx:DataGridColumn headerText="ASESOR" dataField="NOM_ASESOR" width="150"/>
		</mx:columns>
	</mx:DataGrid>
	<mx:Button id="btnExportar" x="678.5" y="152" label="Exportar Excel" click="exportar()" enabled="false"/>
	<mx:Label id="lblTotal" x="18.45" y="389" width="680.05" fontWeight="bold" fontStyle="italic" fontSize="12"/>
	<local:FiltroAcreditado id="comFiltroAcreditado"/>
</mx:Canvas>